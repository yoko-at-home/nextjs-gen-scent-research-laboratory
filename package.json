{
  "name": "nexst-tailwind",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "serve": "run-s build start",
    "lint": "next lint",
    "prettier": "prettier --check .",
    "unit": "jest",
    "e2e": "playwright test",
    "test": "run-p -l -c --aggregate-output lint prettier unit",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write .",
    "env": "vc env pull .env.local",
    "prepare": "husky install"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.0",
    "@tailwindcss/line-clamp": "0.4.0",
    "@tailwindcss/typography": "0.5.2",
    "next": "12.1.5",
    "next-pwa": "5.5.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-error-boundary": "3.1.4"
  },
  "devDependencies": {
    "@playwright/test": "1.21.1",
    "@sendgrid/mail": "7.6.2",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.1.1",
    "@testing-library/user-event": "14.1.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.14",
    "@types/react": "17.0.44",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "autoprefixer": "10.4.5",
    "axios": "0.27.2",
    "budoux": "0.1.0",
    "classcat": "5.0.3",
    "date-fns": "2.28.0",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import-access": "1.0.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-tailwindcss": "3.5.0",
    "eslint-plugin-testing-library": "5.3.1",
    "husky": "7.0.4",
    "jest": "28.0.2",
    "lint-staged": "12.4.1",
    "microcms-js-sdk": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.2",
    "react-hooks-use-modal": "2.1.0",
    "react-test-renderer": "18.1.0",
    "swr": "1.3.0",
    "tailwindcss": "3.0.24",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
